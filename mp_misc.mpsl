/* editor actions */

mp.actions['eval']	= sub (d) { 
	local t = mp.readline(L("Code to execute:"), "eval");

	if(t != NULL)
	{
		t = eval(t);

		if(ERROR != NULL)
			mp.alert(L("Error: ") ~ ERROR);
		else
		if(t != NULL)
			mp.alert(L("Exit value:\n") ~ t);
	}
};

mp.actions['eval-doc']	= sub (d) {
	local t = join("\n", d.txt.lines);

	if(t != NULL)
	{
		t = eval(t);

		if(ERROR != NULL)
			mp.alert(L("Error: ") ~ ERROR);
	}
};

mp.actions['zoom-in'] 	= sub (d) {

	mp.config.font_size++;
	mp.update_ui();
};

mp.actions['zoom-out'] 	= sub (d) {

	if(mp.config.font_size > 4)
	{
		mp.config.font_size--;
		mp.update_ui();
	}
};

/* default key bindings */

mp.keycodes['escape']		= 'eval';
mp.keycodes['f12']		= 'zoom-in';
mp.keycodes['ctrl-kp-plus' ]	= 'zoom-in';
mp.keycodes['f11']		= 'zoom-out';
mp.keycodes['ctrl-kp-minus' ]	= 'zoom-out';

/* action descriptions */

mp.actdesc['eval']	= LL("Execute MPSL code...");
mp.actdesc['eval-doc']	= LL("Execute document as MPSL");
mp.actdesc['zoom-in']	= LL("Bigger font");
mp.actdesc['zoom-out']	= LL("Smaller font");

